<%- include('./partials/header.ejs') %>

    <div>
        <% if(blogs) { %>

            <h2>Blogs List</h2>

            <% for(let i = 0; i < blogs.length; i++) { %>

                <a href="/blogs/<%= blogs[i]._id%>">
                    <h3><%= blogs[i].title %></h3>
                </a>

                <small>
                    Created by <a href="user/profile/<%= blogs[i].user.email %>">
                        <%= blogs[i].user.email %>
                    </a>
                </small>

                <p><%= blogs[i].body %></p>

            <% } %>

        <% } else { %>
        
            <h4> No Blogs Yet</h4>
        
        <% } %> 
    </div>

</body>
</html>